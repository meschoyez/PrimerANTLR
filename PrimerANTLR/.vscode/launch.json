    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-App<PrimerANTLR_dad19d29>",
            "request": "launch",
            "mainClass": "App",
            "projectName": "PrimerANTLR_dad19d29"
        },
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo con la gramatica
            "grammar": "${file}",
            // Archivo a parsear
            "input": "src/entrada.txt",
            // Simbolo inicial
            "startRule": "si",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
        }       
    ]
}